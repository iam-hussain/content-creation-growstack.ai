generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model UserInput {
  id        Int                @id @default(autoincrement())
  email     String
  keywords  String
  audience  String
  language  String
  tone      String
  createdAt DateTime           @default(now())
  outputs   GeneratedContent[]

  @@map("user_input")
}

model GeneratedContent {
  id          Int       @id @default(autoincrement())
  blog        String?
  twitter     String?
  facebook    String?
  linkedin    String?
  instagram   String?
  threads     String?
  userInputId Int
  userInput   UserInput @relation(fields: [userInputId], references: [id])
  createdAt   DateTime  @default(now())
}
